{
    "name": "ROS Noetic kuLimo Development Container",
    "dockerFile": "Dockerfile",
    "runArgs": [
        "--network", "host",
        "--privileged",
        "-e", "DISPLAY=${env:DISPLAY}",
        "-v", "/tmp/.X11-unix:/tmp/.X11-unix"
    ],
    "mounts": [
        "source=${localWorkspaceFolder},target=/root/kuLimo,type=bind,consistency=cached"
    ],
    "remoteUser": "root",
    "workspaceFolder": "/root/kuLimo",
    "postCreateCommand": "bash -c 'echo \"source /opt/ros/noetic/setup.bash\" >> ~/.bashrc && echo \"source /root/kuLimo/catkin_ws/devel/setup.bash\" >> ~/.bashrc && echo \"alias sb=\\\"source /opt/ros/noetic/setup.bash && source /root/kuLimo/catkin_ws/devel/setup.bash\\\"\" >> ~/.bash_aliases && echo \"alias cm=\\\"cd ~/kuLimo/catkin_ws && catkin_make\\\"\" >> ~/.bash_aliases && source ~/.bashrc && source ~/.bash_aliases'",
    "postAttachCommand": "bash -c \"export XDG_RUNTIME_DIR=/run/user/$(id -u) && mkdir -p /run/user/$(id -u) && chmod 700 /run/user/$(id -u)\"",
    "customizations": {
        "vscode": {
            "settings": {
                "terminal.integrated.profiles.linux": {
                    "bash": {
                        "path": "bash",
                        "args": ["-l"],
                        "overrideName": true
                    }
                },
                "terminal.integrated.defaultProfile.linux": "bash",
                "terminal.integrated.fontSize": 14
            },
            "extensions": [
                "ms-azuretools.vscode-docker",
                "ms-vscode.cpptools",
                "ms-python.python",
                "redhat.vscode-yaml",
                "ms-iot.vscode-ros"
            ]
        }
    }
}